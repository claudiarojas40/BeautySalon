@model BeautySalon.Models.DetalleVenta

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Detalle Venta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #EDE7F6; /* Fondo lavanda claro */
        }

        .form-container {
            background-color: #D1C4E9; /* Fondo morado pastel */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #B39DDB; /* Borde morado claro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
            color: #512DA8; /* Texto morado oscuro */
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .form-control {
            flex: 1; /* Hace que el campo de entrada ocupe el espacio restante */
        }

        .btn-primary {
            background-color: #7E57C2; /* Botón morado */
            border-color: #7E57C2;
        }

            .btn-primary:hover {
                background-color: #5E35B1; /* Botón morado oscuro al pasar el cursor */
                border-color: #5E35B1;
            }

        .btn-success {
            background-color: #B2DFDB; /* Botón verde agua claro */
            border-color: #B2DFDB;
            color: #512DA8; /* Texto morado oscuro */
        }

            .btn-success:hover {
                background-color: #80CBC4; /* Botón verde agua oscuro al pasar el cursor */
                border-color: #80CBC4;
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1 class="text-center mb-4">Editar Detalle Venta</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Primera fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Precio" class="form-label">Precio</label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Suma" class="form-label">Suma</label>
                        <input asp-for="Suma" class="form-control" />
                        <span asp-validation-for="Suma" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="IdProducto" class="form-label">Producto</label>
                        <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                        <span asp-validation-for="IdProducto" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="IdVenta" class="form-label">Venta</label>
                        <select asp-for="IdVenta" class="form-control" asp-items="ViewBag.IdVenta"></select>
                        <span asp-validation-for="IdVenta" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tercera fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Cantidad" class="form-label">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones alineados al centro -->
                <div class="btn-container mt-4">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Atrás</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>