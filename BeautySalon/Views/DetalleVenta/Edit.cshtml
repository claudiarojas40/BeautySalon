@model BeautySalon.Models.DetalleVenta

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Detalle Venta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #FADAD1;
            padding: 20px;
        }

        .form-container {
            background-color: ; /* Fondo blanco para el contenedor del formulario */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: bold; /* Resalta las etiquetas */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="text-center mb-4">Editar Detalle Venta</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Grid de filas con dos columnas -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Suma" class="form-label"></label>
                            <input asp-for="Suma" class="form-control" />
                            <span asp-validation-for="Suma" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdProducto" class="form-label"></label>
                            <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                            <span asp-validation-for="IdProducto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdVenta" class="form-label"></label>
                            <select asp-for="IdVenta" class="form-control" asp-items="ViewBag.IdVenta"></select>
                            <span asp-validation-for="IdVenta" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cantidad" class="form-label"></label>
                            <input asp-for="Cantidad" class="form-control" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Botones alineados al centro -->
                <div class="text-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-success">Atrás</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
