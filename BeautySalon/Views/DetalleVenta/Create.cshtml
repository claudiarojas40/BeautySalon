@model BeautySalon.Models.DetalleVenta

@{
    ViewData["Title"] = "Create";
}

<div style="background-color: #F3E5F5; padding: 20px; border-radius: 8px;">
    <h1 class="text-center" style="color: #7B1FA2;">Crear Detalle de Venta</h1>
    <hr />
    <div class="container" style="border: 1px solid #D8BFD8; padding: 20px; border-radius: 8px; background-color: #F3E5F5;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <!-- Primera columna -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Precio" class="control-label font-weight-bold" style="color: black;"></label>
                                <input asp-for="Precio" class="form-control" style="border: 1px solid #CE93D8;" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Suma" class="control-label font-weight-bold" style="color: black;"></label>
                                <input asp-for="Suma" class="form-control" style="border: 1px solid #CE93D8;" />
                                <span asp-validation-for="Suma" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdProducto" class="control-label font-weight-bold" style="color: black;"></label>
                                <select asp-for="IdProducto" class="form-control" style="border: 1px solid #CE93D8;" asp-items="ViewBag.IdProducto"></select>
                            </div>
                        </div>

                        <!-- Segunda columna -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IdVenta" class="control-label font-weight-bold" style="color: black;"></label>
                                <select asp-for="IdVenta" class="form-control" style="border: 1px solid #CE93D8;" asp-items="ViewBag.IdVenta"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Cantidad" class="control-label font-weight-bold" style="color: black;"></label>
                                <input asp-for="Cantidad" class="form-control" style="border: 1px solid #CE93D8;" />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Crear" class="btn" style="background-color: #7B1FA2; color: white; border: none; width: 120px;" />
                        <a asp-action="Index" class="btn" style="background-color: #9575CD; color: white; border: none; width: 120px;">Atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
