@model BeautySalon.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="es">


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <style>
        body {
            background-color: #EDE7F6; /* Fondo lavanda claro */
        }

        .form-container {
            background-color: #D1C4E9; /* Fondo morado pastel */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #B39DDB; /* Borde morado claro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
            color: #2c3e50; /* Texto negro */
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .form-control {
            flex: 1; /* Hace que el campo de entrada ocupe el espacio restante */
        }

        .btn-primary {
            background-color: #7E57C2; /* Botón morado */
            border-color: #7E57C2;
        }

            .btn-primary:hover {
                background-color: #5E35B1; /* Botón morado oscuro al pasar el cursor */
                border-color: #5E35B1;
            }

        .btn-success {
            background-color: #B2DFDB; /* Botón verde agua claro */
            border-color: #B2DFDB;
            color: #512DA8; /* Texto morado oscuro */
        }

            .btn-success:hover {
                background-color: #80CBC4; /* Botón verde agua oscuro al pasar el cursor */
                border-color: #80CBC4;
            }
    </style>

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Primera columna -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda columna -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Estatus" class="control-label"></label>
                        <input asp-for="Estatus" class="form-control" />
                        <span asp-validation-for="Estatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaRegistro" class="control-label"></label>
                        <input asp-for="FechaRegistro" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdRol" class="control-label"></label>
                        <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botones -->
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn me-2" style="background-color: #5E35B1; color: white;" />
                <a asp-action="Index" class="btn" style="background-color: #9575CD; color: white;">Atrás</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}