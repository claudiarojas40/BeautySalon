@model BeautySalon.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <style>
        body {
            background-color: #FADAD1;
            padding: 40px;
        }

        .form-container {
            background-color: #;
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #ccc;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
        }

        .form-group {
            width: 48%; /* Asegura que cada columna ocupe el 48% del espacio */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1 class="text-center mb-4">Editar Usuario</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Primera fila -->
                <div class="form-row mb-3">
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda fila -->
                <div class="form-row mb-3">
                    <div class="form-group">
                        <label asp-for="Login" class="form-label">Login</label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tercera fila -->
                <div class="form-row mb-3">
                    <div class="form-group">
                        <label asp-for="Estatus" class="form-label">Estatus</label>
                        <input asp-for="Estatus" class="form-control" />
                        <span asp-validation-for="Estatus" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" type="date" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cuarta fila -->
                <div class="form-row mb-3">
                    <div class="form-group" style="width: 100%;">
                        <label asp-for="IdRol" class="form-label">Rol</label>
                        <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones alineados al centro -->
                <div class="text-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-success">Atrás</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
