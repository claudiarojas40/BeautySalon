@model BeautySalon.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Esto elimina el layout global para centrarnos solo en el login
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeautySalon</title>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>

<body>
    <div class="Email-container">
        <div class="Email-box">
            <h2>Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Login">Login</label> <!-- Corregido: se cierra la etiqueta for correctamente -->
                    <input type="text" id="Login" name="Login" class="form-control" placeholder="Ingresa tu Email" required />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="Password" class="form-control" placeholder="Ingresa tu contraseña" required />
                </div>
                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </form>
            <div class="mt-3">
                <a asp-action="ForgotPassword" asp-controller="Auth">¿Olvidaste tu contraseña?</a>
            </div>

            <footer>
                <p>Bienvenido a BeautySalon</p>
            </footer>
        </div>
    </div>
</body>
</html>