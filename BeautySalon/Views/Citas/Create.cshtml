@model BeautySalon.Models.Citas

@{
    ViewData["Title"] = "Create";
}

<div style="background-color: #D8BFD8; padding: 20px; border-radius: 8px;">
    <h1 class="text-center text-primary">Crear Cita</h1>
    <h4 class="text-center">Información de la Cita</h4>
    <hr />
    <div class="container" style="border: 1px solid #D8BFD8; padding: 20px; border-radius: 8px; background-color: #D8BFD8;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="NombreCompleto" class="control-label font-weight-bold"></label>
                        <input asp-for="NombreCompleto" class="form-control" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CorreoElectronico" class="control-label font-weight-bold"></label>
                        <input asp-for="CorreoElectronico" class="form-control" />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NumeroContacto" class="control-label font-weight-bold"></label>
                        <input asp-for="NumeroContacto" class="form-control" />
                        <span asp-validation-for="NumeroContacto" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Servicios" class="control-label font-weight-bold"></label>
                        <input asp-for="Servicios" class="form-control" />
                        <span asp-validation-for="Servicios" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaRegistro" class="control-label font-weight-bold"></label>
                        <input asp-for="FechaRegistro" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Crear" class="btn btn-primary me-2" style="width: 120px;" />
                        <a asp-action="Index" class="btn btn-secondary" style="width: 120px;">Atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
