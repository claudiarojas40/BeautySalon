@model BeautySalon.Models.Citas

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Citas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #EDE7F6; /* Fondo lavanda claro */
        }

        .form-container {
            background-color: #D1C4E9; /* Fondo morado pastel */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #B39DDB; /* Borde morado claro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
            color: #2c3e50; /*texto negro*/
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .form-control {
            flex: 1; /* Hace que el campo de entrada ocupe el espacio restante */
        }

        .btn-primary {
            background-color: #7E57C2; /* Botón morado */
            border-color: #7E57C2;
        }

            .btn-primary:hover {
                background-color: #5E35B1; /* Botón morado oscuro al pasar el cursor */
                border-color: #5E35B1;
            }

        .btn-success {
            background-color: #B2DFDB; /* Botón verde agua claro */
            border-color: #B2DFDB;
            color: #512DA8; /* Texto morado oscuro */
        }

            .btn-success:hover {
                background-color: #80CBC4; /* Botón verde agua oscuro al pasar el cursor */
                border-color: #80CBC4;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="text-center mb-4">Editar Cita</h1>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Primera columna -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NombreCompleto" class="form-label"></label>
                            <input asp-for="NombreCompleto" class="form-control" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CorreoElectronico" class="form-label"></label>
                            <input asp-for="CorreoElectronico" class="form-control" />
                            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NumeroContacto" class="form-label"></label>
                            <input asp-for="NumeroContacto" class="form-control" />
                            <span asp-validation-for="NumeroContacto" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Segunda columna -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Servicios" class="form-label"></label>
                            <input asp-for="Servicios" class="form-control" />
                            <span asp-validation-for="Servicios" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label"></label>
                            <input asp-for="FechaRegistro" class="form-control" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">Guardar</button>
                    <a asp-action="Index" class="btn" style="background-color: #9575CD; color: white;">Atrás</a>

                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>