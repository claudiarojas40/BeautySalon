@model BeautySalon.Models.Citas

@{
    ViewData["Title"] = "Eliminar Cita";
}

<div style="background-color: #F5F5F5; padding: 20px; border-radius: 8px;">
    <h1 class="text-center text-danger">Eliminar Cita</h1>
    <h3 class="text-center">¿Estás seguro de que deseas eliminar esta cita?</h3>
    <div class="container mt-4" style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; background-color: white;">
        <h4 class="text-primary">Detalles de la Cita</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CorreoElectronico)
            </dd>

            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.NumeroContacto)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NumeroContacto)
            </dd>

            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.Servicios)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Servicios)
            </dd>

            <dt class="col-sm-4 font-weight-bold">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger me-2" style="width: 120px;" />
            <a asp-action="Index" class="btn btn-secondary" style="width: 120px;">Atrás</a>
        </form>
    </div>
</div>
