@model BeautySalon.Models.Venta

@{
    ViewData["Title"] = "Details";
}

<body style="background-color:#FADAD1;">
</body>

<h1>Detalle</h1>

<!-- Cuadro alrededor del contenido -->
<div class="detalle-cuadro">
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.VentasExentas)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.VentasExentas)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Descuento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descuento)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Iva)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Iva)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Total)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TotalPagar)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TotalPagar)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Codigo)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Direccion)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
        </dd>
    </dl>

    <!-- Contenedor para los botones -->
    <div class="botones">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-success">Atras</a>
    </div>
</div>

<style>
    .detalle-cuadro {
        max-width: 600px; /* Ancho máximo del cuadro */
        margin: auto; /* Centra el cuadro en la página */
        padding: 20px; /* Espaciado interno del cuadro */
        background-color: #f5d1c8; /* Color de fondo del cuadro */
        border: 2px solid #e0bfb7; /* Borde del cuadro */
        border-radius: 8px; /* Bordes redondeados */
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1); /* Sombra del cuadro */
    }

    .botones {
        display: flex; /* Usa flexbox para alinear los botones */
        justify-content: center; /* Centra los botones horizontalmente */
        margin-top: 20px; /* Espacio superior */
    }

    .btn {
        margin: 0 10px; /* Espacio entre los botones */
    }
</style>
