@model BeautySalon.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <style>
        body {
            background-color: #EDE7F6; /* Fondo lavanda claro */
        }

        .form-container {
            background-color: #e8dff5; /* Fondo morado pastel */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #B39DDB; /* Borde morado claro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
            color: #2c3e50; /* Texto negro */
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .form-control {
            flex: 1; /* Hace que el campo de entrada ocupe el espacio restante */
        }

        .btn-primary {
            background-color: #7E57C2; /* Botón morado */
            border-color: #7E57C2;
        }

            .btn-primary:hover {
                background-color: #5E35B1; /* Botón morado oscuro al pasar el cursor */
                border-color: #5E35B1;
            }

        .btn-success {
            background-color: #B2DFDB; /* Botón verde agua claro */
            border-color: #B2DFDB;
            color: #512DA8; /* Texto morado oscuro */
        }

            .btn-success:hover {
                background-color: #80CBC4; /* Botón verde agua oscuro al pasar el cursor */
                border-color: #80CBC4;
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1 class="text-center mb-4">Editar Producto</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Primera fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="PrecioUnitario" class="form-label">Precio Unitario</label>
                        <input asp-for="PrecioUnitario" class="form-control" />
                        <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="PrecioVenta" class="form-label">Precio Venta</label>
                        <input asp-for="PrecioVenta" class="form-control" />
                        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tercera fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Codigo" class="form-label">Código</label>
                        <input asp-for="Codigo" class="form-control" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Imagen" class="form-label">Imagen</label>
                        <input asp-for="Imagen" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cuarta fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Marca" class="form-label">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="FechaRegistro" class="form-label">Fecha Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" type="date" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                </div>

                <!-- Quinta fila -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="FechaVencimiento" class="form-label">Fecha Vencimiento</label>
                        <input asp-for="FechaVencimiento" class="form-control" type="date" />
                        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Categoria" class="form-label">Categoría</label>
                        <input asp-for="Categoria" class="form-control" />
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones alineados al centro -->
                <div class="text-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn" style="background-color: #9575CD; color: white;">Atrás</a>

                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>