@model BeautySalon.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<body style="background-color:#F5F5F5;">
  
    <div class="detalle">
        <h1>Detalle</h1>
        <h2>Producto</h2>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Nombre):</strong>
            @Html.DisplayFor(model => model.Nombre)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>
            @Html.DisplayFor(model => model.Descripcion)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.PrecioUnitario):</strong>
            @Html.DisplayFor(model => model.PrecioUnitario)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.PrecioVenta):</strong>
            @Html.DisplayFor(model => model.PrecioVenta)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Codigo):</strong>
            @Html.DisplayFor(model => model.Codigo)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Imagen):</strong>
            @Html.DisplayFor(model => model.Imagen)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Marca):</strong>
            @Html.DisplayFor(model => model.Marca)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.FechaRegistro):</strong>
            @Html.DisplayFor(model => model.FechaRegistro)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.FechaVencimiento):</strong>
            @Html.DisplayFor(model => model.FechaVencimiento)
        </div>

        <div class="detalle-item">
            <strong>@Html.DisplayNameFor(model => model.Categoria):</strong>
            @Html.DisplayFor(model => model.Categoria)
        </div>

        <!-- Botones -->
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="boton-editar">Editar</a>
        <a asp-action="Index" class="boton-atras">Atras</a>
    </div>
</body>

<style>
    .detalle {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #D8BFD8;
        border-radius: 8px;
    }

    .detalle-item {
        background-color: #d1cfe2;
        padding: 10px;
        margin: 10px 0;
        border-radius: 6px;
        border: 1px solid #e0bfb7;
        box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

        .detalle-item strong {
            font-weight: bold;
            color: #333;
        }

    .boton-editar, .boton-atras {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px 5px 0 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

    .boton-editar {
        background-color: #FFD54F;
    }

    .boton-atras {
        background-color: #4CAF50;
    }
</style>
