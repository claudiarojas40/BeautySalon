@model BeautySalon.Models.Producto

@{
    ViewData["Title"] = "Delete";
}
<div style="background-color: #F5F5F5; padding: 20px; border-radius: 8px;">
    <h1 class="text-center text-danger">Eliminar Producto</h1>
    <h3 class="text-center">¿Deseas eliminar este registro?</h3>
    <div class="container" style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; background-color: white;">
        <dl class="row mb-4">
            <dt class="col-sm-3 font-weight-bold">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 font-weight-bold">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-3 font-weight-bold">Precio Unitario</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PrecioUnitario)</dd>

            <dt class="col-sm-3 font-weight-bold">Precio Venta</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PrecioVenta)</dd>

            <dt class="col-sm-3 font-weight-bold">Código</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Codigo)</dd>

            <dt class="col-sm-3 font-weight-bold">Imagen</dt>
            <dd class="col-sm-9"><img src="@Url.Content(Model.Imagen)" alt="Producto" style="width: 100px; height: auto; border: 1px solid #ddd; border-radius: 4px;" /></dd>

            <dt class="col-sm-3 font-weight-bold">Marca</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

            <dt class="col-sm-3 font-weight-bold">Fecha Registro</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaRegistro)</dd>

            <dt class="col-sm-3 font-weight-bold">Fecha Vencimiento</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaVencimiento)</dd>

            <dt class="col-sm-3 font-weight-bold">Categoría</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria)</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger mr-2" style="width: 120px;" />
                <a asp-action="Index" class="btn btn-success" style="width: 120px;">Cancelar</a>
            </div>
        </form>
    </div>
</div>
