@model BeautySalon.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<div style="background-color: #F3E5F5; padding: 20px; border-radius: 8px;">
    <h1 class="text-center" style="color: #7B1FA2;">Crear Producto</h1>
    <h4 class="text-center" style="color: #2c3e50;">Información del Producto</h4>
    <hr />
    <div class="container" style="border: 1px solid #D8BFD8; padding: 20px; border-radius: 8px; background-color: #F3E5F5;">
        <form class="row" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Primera columna -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="Codigo" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="Nombre" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="Descripcion" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioUnitario" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="PrecioUnitario" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaRegistro" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="FechaRegistro" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>
            </div>

            <!-- Segunda columna -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PrecioVenta" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="PrecioVenta" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label font-weight-bold" style="color: black;">Imagen</label>
                    <input class="form-control" type="file" id="imagen" name="Imagen" style="border: 1px solid #CE93D8;" />
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="Marca" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaVencimiento" class="control-label font-weight-bold" style="color: black;"></label>
                    <input asp-for="FechaVencimiento" class="form-control" style="border: 1px solid #CE93D8;" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label font-weight-bold" style="color: black;"></label>
                    <select asp-for="Categoria" class="form-control" style="border: 1px solid #CE93D8;">
                        <option value="">Seleccione una categoría</option>
                        <option value="1">Categoría 1</option>
                        <option value="2">Categoría 2</option>
                        <option value="3">Categoría 3</option>
                        <option value="4">Categoría 4</option>
                        <option value="5">Categoría 5</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>

            <!-- Botones centrados al final -->
            <div class="form-group mt-4 text-center col-md-12">
                <input type="submit" value="Crear" class="btn" style="background-color: #7B1FA2; color: white; border: none; width: 120px;" />
                <a asp-action="Index" class="btn" style="background-color: #9575CD; color: white; border: none; width: 120px;">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

