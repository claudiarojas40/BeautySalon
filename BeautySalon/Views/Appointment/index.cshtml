@model IEnumerable<BeautySalon.Models.Appointment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lista de Citas</title>
</head>
<body>
    <div class="container">
        <h1>Lista de Citas</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Servicio</th>
                    <th>Fecha y Hora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Name</td>
                        <td>@appointment.Email</td>
                        <td>@appointment.Service</td>
                        <td>@appointment.AppointmentDate</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Download", "Appointment")" class="btn btn-primary">Descargar Citas</a>
    </div>
</body>
</html>

